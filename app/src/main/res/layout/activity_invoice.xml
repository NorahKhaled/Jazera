<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cart.Invoice">

    <include
        layout="@layout/toolbar1"
        android:id="@+id/toolbar"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="19dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="ملخص الطلب"
        android:textColor="@color/Tex"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"

        android:text="تم إستلام طلبك بنجاح "
        />

    <TextView
        android:id="@+id/Order_NO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="شكراً لإستخدامكم تطبيق عذق الجزيرة"
        android:textColor="@color/textSub"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/tv_message"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Info_"/>

    <ImageView
        android:id="@+id/icon_pic"
        android:layout_width="680px"
        android:layout_height="630px"
        android:layout_centerInParent="true"
        android:src="@drawable/app_logo"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="72dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/home_app"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:text="الرجوع إلى التطبيق"
            android:textColor="@color/White"
            android:textSize="15sp"
            android:textStyle="bold"


            />
    </LinearLayout>

</RelativeLayout>